<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/dimens_4x"
    tools:context=".RegisteredActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dimens_2x"
        android:layout_marginBottom="@dimen/dimens_2x">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingEnd="@dimen/dimens_2x"
        android:paddingStart="@dimen/dimens_2x"
        android:background="@android:color/darker_gray"
        android:text="@string/welcome_registered"
        android:textSize="25sp"/>
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/tv_view_username_top"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/dimens_2x"
            android:layout_weight="1"
            android:background="@android:color/darker_gray"
            android:textSize="25sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:background="@android:color/holo_blue_light"
        android:layout_margin="2dp"
        android:paddingLeft="@dimen/dimens_4x"
        android:paddingRight="@dimen/dimens_4x">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="2dp"
            android:text="@string/username_view"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_view_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:background="@android:color/holo_blue_light"
        android:layout_margin="2dp"
        android:paddingLeft="@dimen/dimens_4x"
        android:paddingRight="@dimen/dimens_4x">

        <TextView
            android:id="@+id/tv_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="2dp"
            android:text="@string/password_registered"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_view_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp" />

    </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/basic_info"
            android:paddingStart="@dimen/dimens_2x"
            android:paddingEnd="@dimen/dimens_2x"
            android:textSize="25sp"
            android:layout_marginBottom="@dimen/dimens_2x"
            android:layout_marginTop="@dimen/dimens_2x"
            android:background="@android:color/darker_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/holo_blue_light"
        android:layout_margin="2dp"
        android:paddingLeft="@dimen/dimens_4x"
        android:paddingRight="@dimen/dimens_4x">

        <TextView
            android:id="@+id/tv_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="2dp"
            android:text="@string/phone_number_registered"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_view_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/holo_blue_light"
        android:layout_margin="2dp"
        android:paddingLeft="@dimen/dimens_4x"
        android:paddingRight="@dimen/dimens_4x">

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="2dp"
            android:text="@string/address_registered"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_view_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/holo_blue_light"
        android:layout_margin="2dp"
        android:paddingLeft="@dimen/dimens_4x"
        android:paddingRight="@dimen/dimens_4x">

        <TextView
            android:id="@+id/tv_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="2dp"
            android:text="@string/gender_registered"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_view_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/holo_blue_light"
        android:layout_margin="2dp"
        android:paddingLeft="@dimen/dimens_4x"
        android:paddingRight="@dimen/dimens_4x">

        <TextView
            android:id="@+id/tv_birth_place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="2dp"
            android:text="@string/birth_place_registered"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/sp_dropdown_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp" />
    </LinearLayout>
</LinearLayout>