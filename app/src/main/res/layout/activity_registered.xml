<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/dimens_2x"
    tools:context=".RegisteredActivity">

    <LinearLayout
        style="@style/linearLayoutDesign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/textViewHead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/welcome_registered" />

        <TextView
            android:id="@+id/tv_view_username_top"
            style="@style/textViewHead"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        style="@style/linearLayoutDesign2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/textViewData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/username_view" />

        <TextView
            android:id="@+id/tv_view_username"
            style="@style/textViewData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        style="@style/linearLayoutDesign2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_password"
            style="@style/textViewData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/password_registered" />

        <TextView
            android:id="@+id/tv_view_password"
            style="@style/textViewData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        style="@style/textViewHead2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/basic_info" />

    <LinearLayout
        style="@style/linearLayoutDesign2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_phone_number"
            style="@style/textViewData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/phone_number_registered" />

        <TextView
            android:id="@+id/tv_view_phone"
            style="@style/textViewData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="ImplicitIntent" />
    </LinearLayout>

    <LinearLayout
        style="@style/linearLayoutDesign2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/textViewData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tv_email_view" />

        <TextView
            android:id="@+id/tv_view_email"
            style="@style/textViewData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="ImplicitIntent" />

    </LinearLayout>

    <LinearLayout
        style="@style/linearLayoutDesign2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_address"
            style="@style/textViewData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/address_registered" />

        <TextView
            android:id="@+id/tv_view_address"
            style="@style/textViewData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="ImplicitIntent" />
    </LinearLayout>

    <LinearLayout
        style="@style/linearLayoutDesign2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_gender"
            style="@style/textViewData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/gender_registered" />

        <TextView
            android:id="@+id/tv_view_gender"
            style="@style/textViewData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        style="@style/linearLayoutDesign2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_website_view"
            style="@style/textViewData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/website_view" />

        <TextView
            android:id="@+id/tv_view_website"
            style="@style/textViewData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="ImplicitIntent" />
    </LinearLayout>

    <LinearLayout
        style="@style/linearLayoutDesign2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_birth_place"
            style="@style/textViewData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/birth_place_registered" />

        <TextView
            android:id="@+id/sp_dropdown_view"
            style="@style/textViewData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>